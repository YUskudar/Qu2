@model chatting.Models.content

@{
    ViewBag.Title = "Add Content";
}

<h2>Add New Content</h2>

@using (Html.BeginForm("AddContent", "Content", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.title)
        @Html.TextBoxFor(model => model.title, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.message)
        @Html.TextAreaFor(model => model.message, new { @class = "form-control", required = "required" })
    </div>

    <!-- Resim Yükleme Alanı -->
    <div class="form-group">
        <label for="imageFile">Resim Yükle (isteğe bağlı):</label>
        <input type="file" name="imageFile" id="imageFile" />
    </div>

    <button type="submit" class="btn btn-primary">Gönder</button>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <p class="text-danger">@ViewBag.ErrorMessage</p>
}
