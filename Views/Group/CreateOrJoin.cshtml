@{
    ViewBag.Title = "Yeni Grup Oluştur veya Gruba Katıl";
}

<h2>Yeni Grup Oluştur veya Gruba Katıl</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Grup Bilgileri</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <label for="groupname">Başlık</label>
        <input type="text" id="groupname" name="groupname" class="form-control" required="required" />
    </div>
    <div class="form-group">
        <label for="groupname">Açıklama</label>
        <input type="text" id="groupdescription" name="groupdescription" class="form-control" />
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="createGroup" value="Yeni Grup Oluştur" class="btn btn-default" />
            <input type="submit" name="joinGroup" value="Gruba Katıl" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
