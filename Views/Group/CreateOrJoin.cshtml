@{
    ViewBag.Title = "Yeni Grup Oluştur veya Gruba Katıl";
}

<h2>Yeni Grup Oluştur veya Gruba Katıl</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("CreateOrJoin", "Group", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <h4>Yeni Grup Oluştur</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label for="groupname">Başlık</label>
                <input type="text" id="groupname" name="groupname" class="form-control" />
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" name="groupname" value="Yeni Grup Oluştur" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("CreateOrJoin", "Group", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <h4>Gruba Katıl</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label for="groupCode">Grup Kodu</label>
                <input type="text" id="groupkatılım" name="groupkatılım" class="form-control" />
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" name="groupkatılım" value="Gruba Katıl" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
