@{
    ViewBag.Title = "Gruplara Katıl veya Yeni Grup Oluştur";
}

<h2>Gruplara Katıl veya Yeni Grup Oluştur</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Yeni Grup Oluştur</h3>
        @using (Html.BeginForm("CreateGroup", "Group", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="groupName">Grup Adı:</label>
                <input type="text" id="groupName" name="groupName" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Yeni Grup Oluştur</button>
        }
    </div>
    <div class="col-md-6">
        <h3>Gruba Katıl</h3>
        @using (Html.BeginForm("JoinGroup", "Group", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="groupCode">Grup Kodu:</label>
                <input type="text" id="groupCode" name="groupCode" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-success">Gruba Katıl</button>
        }
    </div>
</div>
