@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "Security", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="useremail">Email</label>
        <input name="useremail" type="text" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="usernickname">Nickname</label>
        <input name="usernickname" type="text" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="username">Name</label>
        <input name="username" type="text" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="usersurname">Surname</label>
        <input name="usersurname" type="text" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="userage">Age</label>
        <input name="userage" type="text" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="password">Parola</label>
        <input name="password" type="password" class="form-control" required>
    </div>
   

    <button type="submit" class="btn btn-success">Üye Ol</button>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <p class="text-danger">@ViewBag.ErrorMessage</p>
}
